- @categories.each do |category|
  %article{class: ["#{category.name}_category", "video_category"]}
    %header
      %h3= link_to category.name, category_path(category)
    .videos.row
      - category.recent_videos.each do |video|
        .video.col-sm-2{title: "#{video.title}: #{video.description}"}
          = link_to video_path(video) do
            %img(src="#{video.small_cover_url}")
    %p.video= "No videos in this category" if category.videos.empty?